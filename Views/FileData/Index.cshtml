@model IEnumerable<NoteDemoMVC.Models.FileData>


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> File List</h2>
            </div>
            <div class="col-6 text-right">

                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"> </i>&nbsp;  Add New File
                </a>
            </div>
        </div>

        <br /><br />

        @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        File Name
                    </th>
                    <th>
                        File Description
                    </th>
                    <th>
                        File Info
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>

                    <td width="30%">
                        <span>@obj.ImageCaption</span>
                    </td>

                    <td width="30%">
                        <span>@obj.ImageDescription</span>

                    </td>

                    <td width="30%">
                        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ImagePath@obj.ImageName" alt="Card image cap">
                    </td>


                    <td class="text-center">
                        <div class="w-100 btn-group " role="group">

                            <a asp-route-Id="@(obj.Id)" asp-action="Delete" class="btn btn-danger">
                                <i class="fas fa-trash"></i>&nbsp;  Delete
                            </a>

                        </div>
                    </td>
                </tr>
                }



            </tbody>
        </table>
    }
    else
    {
        <p>No file exists !</p>
    }

    </div>




