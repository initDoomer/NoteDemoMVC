@model IEnumerable<NoteDemoMVC.Models.Note>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Note List</h2>
        </div>
        <div class="col-6 text-right">

            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"> </i>&nbsp;  Add New Note
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Note Title
                    </th>
                    <th>
                        Message
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Title</td>

                        <td width="10%">@(obj.Message.Substring(0,obj.Message.Length/3))...</td>
                        <td width="20%">@obj.Category.Name</td>
                        <td width="20%">@obj.Status.StatusType</td>


                        <td class="text-center">
                            <div class="w-100 btn-group " role="group">


                                <a asp-route-Id="@(obj.Id)" asp-action="Upsert" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> &nbsp; Edit
                                </a>

                                <a asp-route-Id="@(obj.Id)" asp-action="Delete" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>&nbsp;  Delete
                                </a>

                            </div>
                        </td>
                    </tr>
                }



            </tbody>
        </table>
    }
    else
    {
        <p>No product exists !</p>
    }

</div>




